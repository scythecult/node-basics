extends ../layouts/main.pug

block pageContent
    h2 Welcome to out fancyshop.com
    .products
      h3 Product list
      if products.length > 0
        .products__container.js-products-container
         each product in products
          if product.title
            .product
               h3.product__title #{product.title}
               a(href=`/product-details/${product.id}`, target="_self", rel="noopener noreferrer").product__image
                img(src="https://placehold.co/160x160", alt=`${product.title}`)
               p.product__price $15.99
               p.product__desc Very interesting book...
               button.product__add-to-cart.js-add-to-cart(data-product-id=`${product.id}`) Add to cart
      else
        p Here will be the products soon...
block pageScript
    script(src="/js/add-to-cart.js")