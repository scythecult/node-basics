{
  "type": "module",
  "scripts": {
    "start-servers": "concurrently \"npm run start-api\" \"npm run start-ssr\"",
    "start-ssr": "nodemon --import dotenv/config ./src/express/server.js",
    "start-api": "node --import dotenv/config ./src/service/service.js",
    "start": "npm run start-servers"
  },
  "nodemonConfig": {
    "ignore": [
      "stored/*.json"
    ]
  },
  "dependencies": {
    "@types/node": "^20.11.5",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "mysql2": "^3.9.2",
    "pug": "^3.0.2",
    "save-dev": "^0.0.1-security",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "nodemon": "^3.0.3"
  }
}
